extends ../layout

block content
  h2 Edit Services
  form(action="/admin/services/edit/submit" method="POST")
    div
      input(type="hidden" name="itemId" value=editService._id)
      label(for="name") Name : 
      input(type="text" name="name" value=editService.name required)
    div
      label(for="category") Category : 
      input(type="text" name="category" value=editService.category)
    div
      label(for="price") Price : 
      input(type="number" step="0.01" name="price" value=editService.price)
    div
      label(for="description") Description : 
      textarea(name="description")= editService.description
    button(type="submit") Update
    a.button.btn(href="/admin/services") Cancel
