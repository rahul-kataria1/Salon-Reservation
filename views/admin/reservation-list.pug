extends ../layout

block content
  h2 Reservation List
  a.button(href="/admin/reservation/add") Add Reservation
  if reservations.length
    table
      thead
        tr
          th Name
          th Email
          th Date
          th Time
          th Actions
      tbody
        each r in reservations
          tr
            td= r.name
            td= r.email
            td= r.date
            td= r.time
            td
              a.button(href=`/admin/reservation/edit?resId=${r._id}`) Edit
              a.button.btn(href=`/admin/reservation/delete?resId=${r._id}` onclick="return confirm('Are you sure you want to delete this reservation?');") Delete
  else
    p No reservations yet.
